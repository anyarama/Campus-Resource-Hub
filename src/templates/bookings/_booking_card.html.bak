{% macro render_booking_card(booking, resource, show_actions=True) %}
<div class="card booking-card shadow-sm ">
    <div class="card-body">
        <div class="grid">
            <!-- Resource Image -->
            <div class="grid-col-md-3 col-lg-2  mb-md-0">
                {% if resource.images %}
                    {% set image_list = resource.images.split(',') %}
                    <img src="{{ url_for('static', filename='uploads/' + image_list[0]) }}" 
                         alt="{{ resource.title }}"
                         class="img-fluid rounded"
                         style="width: 100%; height: 120px; object-fit: cover;">
                {% else %}
                    <div class="bg-light rounded d-flex align-items-center justify-content-center"
                         style="width: 100%; height: 120px;">
                        <i class="bi bi-image text-muted" style="font-size: 2.5rem;"></i>
                    </div>
                {% endif %}
            </div>

            <!-- Booking Info -->
            <div class="grid-col-md-6 col-lg-7">
                <div class="d-flex justify-content-between align-items-start ">
                    <h5 class="mb-1">
                        <a href="{{ url_for('resources.detail', resource_id=resource.resource_id) }}" 
                           class="text-decoration-none text-dark">
                            {{ resource.title }}
                        </a>
                    </h5>
                    {% if booking.status == 'pending' %}
                        <span class="badge bg-warning text-dark">Pending</span>
                    {% elif booking.status == 'approved' %}
                        <span class="badge bg-success">Approved</span>
                    {% elif booking.status == 'rejected' %}
                        <span class="badge bg-danger">Rejected</span>
                    {% elif booking.status == 'cancelled' %}
                        <span class="badge bg-secondary">Cancelled</span>
                    {% elif booking.status == 'completed' %}
                        <span class="badge bg-primary">Completed</span>
                    {% endif %}
                </div>

                <p class="text-muted ">
                    <i class="bi bi-geo-alt "></i>{{ resource.location }}
                    <span class="mx-2">|</span>
                    <i class="bi bi-tag "></i>{{ resource.category }}
                </p>

                <div class="mb-2">
                    <strong><i class="bi bi-calendar-event "></i>Start:</strong>
                    {{ booking.start_datetime.strftime('%b %d, %Y at %I:%M %p') }}
                </div>

                <div class="mb-2">
                    <strong><i class="bi bi-calendar-x "></i>End:</strong>
                    {{ booking.end_datetime.strftime('%b %d, %Y at %I:%M %p') }}
                </div>

                <!-- Duration -->
                {% set duration = (booking.end_datetime - booking.start_datetime).total_seconds() %}
                {% set hours = (duration // 3600)|int %}
                {% set minutes = ((duration % 3600) // 60)|int %}
                <div class="text-muted">
                    <small>
                        <i class="bi bi-clock "></i>
                        Duration: 
                        {% if hours > 0 %}{{ hours }}h {% endif %}
                        {% if minutes > 0 %}{{ minutes }}m{% endif %}
                    </small>
                </div>

                <!-- Rejection Reason -->
                {% if booking.status == 'rejected' and booking.rejection_reason %}
                <div class="alert alert-danger   py-2">
                    <small>
                        <strong><i class="bi bi-exclamation-triangle "></i>Rejected:</strong>
                        {{ booking.rejection_reason }}
                    </small>
                </div>
                {% endif %}
            </div>

            <!-- Actions -->
            {% if show_actions %}
            <div class="grid-col-md-3 col-lg-3 d-flex flex-column justify-content-center">
                <a href="{{ url_for('bookings.detail', booking_id=booking.booking_id) }}" 
                   class="btn btn-outline-primary ">
                    <i class="bi bi-eye "></i>View Details
                </a>

                <!-- Quick Actions based on status and role -->
                {% if booking.status == 'pending' %}
                    {% if current_user.role in ['staff', 'admin'] or current_user.user_id == resource.owner_id %}
                        <form method="POST" action="{{ url_for('bookings.approve', booking_id=booking.booking_id) }}" 
                              class="mb-2">
                            <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle "></i>Approve
                            </button>
                        </form>
                    {% endif %}
                    {% if current_user.user_id == booking.requester_id %}
                        <form method="POST" action="{{ url_for('bookings.cancel', booking_id=booking.booking_id) }}" 
                              onsubmit="return confirm('Cancel this booking?');">
                            <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-x-circle "></i>Cancel
                            </button>
                        </form>
                    {% endif %}
                {% elif booking.status == 'approved' %}
                    {% if current_user.user_id == booking.requester_id %}
                        <form method="POST" action="{{ url_for('bookings.cancel', booking_id=booking.booking_id) }}" 
                              onsubmit="return confirm('Cancel this booking?');">
                            <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-x-circle "></i>Cancel
                            </button>
                        </form>
                    {% endif %}
                    {% if current_user.role == 'admin' %}
                        <form method="POST" action="{{ url_for('bookings.complete', booking_id=booking.booking_id) }}" 
                              onsubmit="return confirm('Mark as completed?');" class="mb-2">
                            <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-all "></i>Complete
                            </button>
                        </form>
                    {% endif %}
                {% elif booking.status == 'completed' %}
                    {% if current_user.user_id == booking.requester_id %}
                        <a href="{{ url_for('resources.detail', resource_id=resource.resource_id) }}#reviews" 
                           class="btn btn-outline-primary">
                            <i class="bi bi-star "></i>Leave Review
                        </a>
                    {% endif %}
                {% endif %}
            </div>
            {% endif %}
        </div>
    </div>

    <!-- Card Footer with Timestamps -->
    <div class="card-footer bg-light text-muted">
        <small>
            <i class="bi bi-clock-history "></i>
            Booked: {{ booking.created_at.strftime('%b %d, %Y') }}
            {% if booking.updated_at and booking.updated_at != booking.created_at %}
                <span class="mx-2">|</span>
                <i class="bi bi-arrow-clockwise "></i>
                Updated: {{ booking.updated_at.strftime('%b %d, %Y') }}
            {% endif %}
        </small>
    </div>
</div>
{% endmacro %}
